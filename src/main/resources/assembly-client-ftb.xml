<assembly>
    <id>client-ftb</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>common/base</directory>
            <outputDirectory>/minecraft</outputDirectory>
            <includes>
                <include>mods/*.*</include>
                <include>mods/${mcVersion}/*.*</include>
                <include>scripts/*.*</include>
            </includes>
            <excludes>
                <exclude>loaders/modpack.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>common/prod</directory>
            <outputDirectory>/minecraft</outputDirectory>
            <includes>
                <include>mods/*.*</include>
                <include>mods/${mcVersion}/*.*</include>
                <include>scripts/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>common/base/config</directory>
            <outputDirectory>/minecraft/config</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>client/base</directory>
            <outputDirectory>/minecraft</outputDirectory>
            <includes>
                <include>mods/*.*</include>
                <include>mods/${mcVersion}/*.*</include>
                <include>scripts/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>client/prod</directory>
            <outputDirectory>/minecraft</outputDirectory>
            <includes>
                <include>mods/*.*</include>
                <include>mods/${mcVersion}/*.*</include>
                <include>scripts/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>client/prod/ftb</directory>
            <outputDirectory>/minecraft</outputDirectory>
            <includes>
                <include>mods/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>client/base/config</directory>
            <outputDirectory>/minecraft/config</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
</assembly>
