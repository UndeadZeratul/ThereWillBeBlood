<assembly>
    <id>server</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>common/base</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>loaders/*.*</include>
                <include>mods/*.*</include>
                <include>mods/${mcVersion}/*.*</include>
                <include>scripts/*.*</include>
            </includes>
            <excludes>
                <exclude>loaders/modpack.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>common/dev</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>mods/*.*</include>
                <include>mods/${mcVersion}/*.*</include>
                <include>scripts/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>common/base/config</directory>
            <outputDirectory>/config</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>server/base</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>mods/*.*</include>
                <include>mods/${mcVersion}/*.*</include>
                <include>scripts/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>server/dev</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>mods/*.*</include>
                <include>mods/${mcVersion}/*.*</include>
                <include>scripts/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>server/dev</directory>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>server/base/config</directory>
            <outputDirectory>/config</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
</assembly>
